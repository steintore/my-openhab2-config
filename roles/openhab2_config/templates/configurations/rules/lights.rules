rule "Motion detector in basement wants to turn on the lights"
        when
                Item motion_detector_basement received command or
                Item motion_detector_basement changed
        then
        	logDebug('org.openhab.rules.lights', "Motion detector in basement wants to turn on the lights " + motion_detector_basement)
                if (timerBasement != null) {
                        if(timerBasement.running) {
                                timerBasement.cancel()
                        }
                        timerBasement = null
                }
                switch (motion_detector_basement.state as OnOffType) {
                case ON: {
                		var int seconds = 10800
                        if (mode.state == 0) // HOME
                                sendCommand(scene_light_basement_hall, 1) // ON
                        else if (mode.state == 1 || mode.state == 3) { // NIGHT OR EVENING MODE
                        		seconds = 1800;
                                sendCommand(scene_light_basement_hall, 2) // NIGHT MODE
                        } else { //AWAY
                        		seconds = 900
                                sendNotification("{{stein_email}}",'Bevegelse i kjelleren...')
                        }

                        timerBasement = createTimer(now.plusSeconds(seconds)) [|
                            logInfo("org.openhab.rules.lights", "Basement light timer created by ON-signal, state for motion: " + motion_detector_basement.state)
                            //sendCommand(scene_light_basement_hall, 0)
                            postUpdate(motion_detector_basement, OFF)
                        ]
                }
                case OFF: {
                       	timerBasement = createTimer(now.plusSeconds(120)) [|
                        	logInfo("org.openhab.rules.lights", "Basement light timer created by OFF-signal timed out, state for motion: " + motion_detector_basement.state)
                            //sendCommand(scene_light_basement_hall, 0)
                            postUpdate(motion_detector_basement, OFF)
                        ]
                }
        }
end

